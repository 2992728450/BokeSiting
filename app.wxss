page {
   font-family: "Microsoft YaHei";  
}
image {
  max-width: 100%;
}
.clear{  clear: both;}
.clear:after {
  content: " ";
  display: block;
  clear: both;
  height: 0;
}
.title text {
  display: block;
}
.title .big {
  font-size: 17px;
  font-weight: bold;
}
.title .small {
  font-size: 11px;
  padding-top: 5px;
  line-height: 1.2em;
}
.title .link {
  float: right;
  font-size: 11px;
  line-height: 1.2em;
  margin-top: -1.2em;
  color:#80575d;
}
.special {
  font-size: 17px;
  font-weight: bold;
}
 .cells {
  margin: 7px 0px 0px 0px;
  background: white;
} 
 .cell {
  padding: 20px;
  position: relative;
  box-sizing: border-box;
} 
.myservice {
  padding: 20px;
  position: relative;
  box-sizing: border-box;
} 
 .cell + .cell:before {
  content: " ";
  width: 100%;
  position: absolute;
  height: 1rpx;
  left: 0;
  top: 0;
  box-sizing: border-box;
  border-left: solid 15px white;
  background: #f2f2f2;
} 
 .cell.gift:before {
  display: none;
} 
 .cell text {
  width: 50%;
  padding: 0 10px 0 0;
  box-sizing: border-box;
  display: inline-block;
  line-height: 1.2em;
  font-size: 35rpx;
  font-weight: bold;
} 
 .myservice text {
  width: 50%;
  padding: 0 10px 0 0;
  box-sizing: border-box;
  display: inline-block;
  line-height: 1.2em;
  font-size: 35rpx;
  font-weight: bold;
} 
  .cell text + text {
  text-align: right;
  color: #0e7e46;
}  
.active-cell {
   /* background: #fff000;  */
}
 .cell:after {
  content: " ";
  display: block;
  width: 30rpx;
  position: absolute;
  right: 15px;
  top: 40%;
  border-bottom: solid 2px #d9d9d9;
  border-right: solid 2px #d9d9d9;
  margin-top: -10rpx;
  transform: rotate(-45deg);
  height: 30rpx;
} 
.contacts {
  position: fixed;
  right: 0;
  bottom: 10%;
  z-index: 10;
}
.contacts button {
  font-size: 11px;
  background: rgba(0,0,0,0.8);
  border: 0;
  width: 50px;
  border-bottom: solid 1px rgba(0,0,0,0.85);
  color: white;
  padding: 5px 0;
  border-radius: 0;
}
.input-coupon {
  height: 30px;
}
.btn-submit {
  width: 100%;
  float: right;
  font-size: 90%;
  background: #efc441;
  color: #fff;
  text-align: center;
  line-height: 45px;
  border-radius: 5px;
} 

.item {
  padding: 0 15px;
  box-sizing: border-box;
  flex-direction: row;
  position: relative;
  padding-bottom: 15px;
  margin-top: 15px;
  border-bottom: solid 1px #f8f8f8;
}
.item:after {
  content: " ";
  display: block;
  clear: both;
}
.title {
  margin-bottom: 10px;
}