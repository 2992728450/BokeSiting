
.item {
  position: relative;
}
.thumbnail {
  width: 30%;
  border: solid 1px #f2f2f2;
  border-radius: 2px;
  box-sizing: border-box;
  float: left;
}
.intro {
  width: 70%;
  float: left;
  padding-left: 20px;
  box-sizing: border-box;
  font-size: 15px;
  color: #333;
  padding-right: 50px;
}
.intro .name {
  font-size: 35rpx;
  font-weight: bold;
  margin-top: 30px;
  color: #222;
}
.intro .time{
  margin-top: 10px;
  color:#d3d3d3;
  font-size: 24rpx;
}
