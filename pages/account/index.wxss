.user-info {
  padding-bottom: 5%;
  padding-top: 5%;
  background: #eb5a1e;
 background-image:-webkit-gradient(linear, left top, right bottom, color-stop(0.10, #feAC5E),color-stop(0.25, #EE85A2), color-stop(0.5, #C779D0), color-stop(0.8, #4BC0C8)); 
  text-align: center;
  color: white;
}
.avatar {
  border-radius: 50%;
  width: 218rpx;
  height: 218rpx;
  margin: 0 auto;
  margin-bottom: 10px;
  border: solid 7px rgba(255,255,255,0.7);
  margin-top: 30rpx;
}
.nickname {
  margin-top: 30rpx;
  font-size: 54rpx;
  text-align: center;
  color: #fff;
  display: block;
  text-shadow: 0 0 3px #7e736d;
}
 .cell.gift {
  border-top: solid 10px #f4ede7;
} 
.cell{
  border-bottom: 1px solid #d9d9d9;
}
 .unLoad{
  border-radius: 50%;
  width: 218rpx;
  height: 218rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border: solid 7px rgba(255,255,255,0.7);  
  position: relative;
  box-sizing:content-box;
  padding: 0px;
}
.unLoad::after{
  border: none;
}
 .Load{
  width: 218rpx;
  height: 218rpx;
  border-radius: 50%;
  display: block;
  position: absolute;
 
  top: 0px;
  left: 0px;
}  


.givename{
   margin-top: 30rpx;
  font-size: 54rpx;
  text-align: center;
  color: #fff;
  display: block;
  text-shadow: 0 0 3px #7e736d;
  opacity: 1;
   padding-top: 10px;
}


.return{
  background:#4bc0c8;
  width:84rpx;
  height: 84rpx;
  border-radius: 50%;
  border:none;
  /* overflow: hidden; */
  position: fixed;
  bottom: 50rpx;
  left: 10px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.index{
  width:50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.username{
  font-size: 24rpx;
  position: absolute;
  top: 90rpx;
  left: 8px;
  color:#fff;
  text-shadow: 0 1px 3px #000;
}
.Advertisement{
  display: flex;
  height: 242rpx;
  width:100%;
  background: #f4f4f4;
}
.Advertisement .left{
  width:60%;
  padding-left: 20px;
  padding-top: 20px;
}

.Advertisement .left .name{
  font-size: 35rpx;
  margin-bottom: 10px;
}
.Advertisement .left .content{
  font-size: 24rpx;
  margin-bottom: 5px;
  color: #a4a4a4;
}
.Advertisement .left .time{
  font-size: 24rpx;
  margin-bottom: 5px;
  color: #a4a4a4;
}
.Advertisement .right{
  display: flex;
  padding-top: 10px;
}
.Advertisement .right .price{
  color: #a4a4a4;
  padding-top: 10px;
  margin-right: 20px;
}
.Advertisement .right .buy{
  background: #a4a4a4;
  color: #fff;
  height: 67rpx;
  width: 119rpx;
  font-size: 35rpx;
  padding: 0rpx;
  margin: 0rpx;
  line-height: 67rpx;
}

.version{
  position: relative;
}
.redpoint{
  width:5px!important;
  height: 5px;
  border-radius: 50%;
  background: red;
  padding: 0px!important;
  position: absolute;
  top: 21px;
  left: 90px;
}