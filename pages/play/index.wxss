.cover{
  width:100%;
  height: 100%;
  position: fixed;
  top:0%;
  left: 0%;
  z-index: 100;
}
.modal-box{
  width:90%;
  height: 30vh;
  background: #eb5a1e;
 background-image:-webkit-gradient(linear, left top, right bottom, color-stop(0.05, #C779D0), color-stop(0.8, #FEAC5E));
  color:#fff;
  text-align: center;
  margin: 0px auto;
  position: fixed;
  top: 34%;
  left:50%;
  transform:translate(-50%,0%);
  z-index: 100;
  opacity: 1;
}

.modal-box .book-name{
  margin-top: 20px;
  padding-top: 20px;
}
.modal-box .book-price{
  margin-top: 20px;
}
.modal-box .book-join{
  margin-top: 20px;
  width:60%;
  height: 30px;
  border-radius: 15px;
  line-height: 30px;
}
.close{
  width:30px;
  height: 30px;
  position: absolute;
  top: 5px;
  left: 5px;
}
.cover{
  width:100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
  z-index: 50;
}

