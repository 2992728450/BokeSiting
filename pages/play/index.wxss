.user{
  width:84rpx;
  height: 84rpx;
  border-radius: 50%;
  border:none;
  /* overflow: hidden; */
  position: fixed;
  bottom: 50rpx;
  left: 10px;
}
.user .username{
  font-size: 24rpx;
  position: absolute;
  top: 90rpx;
